<!doctype html>
<html>

<head>
  {{ gift_card.url }}
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">

  {% if product.metafields.global.canonical != blank %}
  <link rel="canonical" href="{{ shop.url }}/{{  product.metafields.global.canonical }}">
  {% else %}
  <link rel="canonical" href="{{ canonical_url }}">
  {% endif %}

  {% if request.page_type == 'product' and request.path contains 'collections' %}
  <meta name="robots" content="noindex,nofollow">
  {% endif %}
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }}
  <!-- Header hook for plugins -->
  {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
  {{ 'application.css' | asset_url | stylesheet_tag }}
  {{ 'custom.css' | asset_url | stylesheet_tag }}
  {{ 'jquery-3.6.0.min.js' | asset_url | script_tag }}
  {{ 'lazysizes.min.js' | asset_url | script_tag }}
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-ENPKQBSSS1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'G-ENPKQBSSS1');
  </script>
</head>

<body class="{{ template | handleize }}-template">
  {% section 'header' %}
  <main role="main">
    {{ content_for_layout }}
  </main>
  {% section 'footer' %}
</body>

</html>