{
  "sections": {
    "template": {
      "type": "template-product",
      "blocks": {
        "carousel": {
          "type": "product_carousel",
          "settings": {
          }
        },
        "main": {
          "type": "product_main",
          "settings": {
            "option1": "{{ product.metafields.my_fields.grip.value }}",
