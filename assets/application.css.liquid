html,
body {
}
{% assign font_header = settings.header_text_font %}
{% assign font_body = settings.body_text_font %}
{% assign font_body_size = settings.body_font_size %}

{{ font_header | font_face: font_display: 'swap' }}
{{ font_body | font_face: font_display: 'swap' }}

h1,h2,h3,h4,h5,h6, button {
	font-family: {{ font_header.family }}, {{ font_header.fallback_families }};	
}
body {
	font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
	font-size: {{ font_body_size }}px;	
}
.inner-hero-section {
	position: relative;
	overflow: hidden;
	width: 100%;
	height: 480px;
}
.inner-slideshow-hero-section .slick-slide {
	position: relative!important;
	overflow: hidden;
	width: 100%!important;
	height: 480px!important;
}
.inner-slideshow-hero-section img {
	width: 100%;
	height: 100%;
	object-fit: cover;	
	z-index: -1;
}
.hero {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}
.inner-hero-section img,
.inner-hero-section svg {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	object-fit: cover;
	object-position: top;
	z-index: -1;
}
.card {
	align-items: center;
	text-align: center;	
}
.card-image {
	width: 150px;
}
.card-body {
	display: flex;
	flex-direction: column;	
}
.card-body .price {
	margin-top: auto;
}
.thumbnails {
	width: 150px;
	height: 150px;
	display: flex;
	align-items: center;
}
#shopify-section-header, #shopify-section-footer{
	background-color: {{ settings.header_footer_color }};
}
.gallery-section img,
.gallery-section iframe {
	width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}
/* ===== Slick Slider ===== */
.slick-prev:before,
.slick-next:before {
	color: #3399ff !important;
}
.product-slider-nav {
	margin-top: 30px;
}
.slick-track {
	display: flex !important;
}

.slick-slide {
	height: inherit !important;
}
/* ===== Slick Slider ===== */

/* ======= Main Menu =======  */
@media (min-width: 992px) {
	.dropdown-hover:hover > .dropdown-menu {
		display: block;
		animation: growOut 400ms ease-in-out forwards;
		transform-origin: top center;
	}
}

@keyframes growOut {
	0% {
	   transform: scaleY(0)
   }
   50% {
	   transform: scaleY(1.1)
   }
   100% {
	   transform: scaleY(1)
   }
}

.dropdown-menu {
	position: absolute;
	top: 100%;
	left: 0;
	z-index: 1000;
	display: none;
	float: left;
	min-width: 160px;
	padding: 0;
	list-style: none;
	font-size: 14px;
	text-align: left;
	background-color: #fff;
	border: 1px solid #ccc;	
	border-radius: 0;
	-webkit-box-shadow: 0 6px 12px rgb(0 0 0 / 18%);
	box-shadow: 0 6px 12px rgb(0 0 0 / 18%);
	background-clip: padding-box;
}
@media (max-width: 991.98px) {
	.dropdown-menu {
		width: 100%;
		border: none;
		margin-left: 20px;
		box-shadow: none;
		background-color: transparent;
	}
}
@media (max-width: 991.98px) {
	.dropdown {
		position: unset;
	}
}
.dropdown-menu-horizontal {
	top: -1px;
	left: 100%;
}
@media (min-width: 992px) {
	#main-menu .menu-view-all {
		display: none;
	}
}
.arrow {
	border: solid rgba(0, 0, 0, 0.4);
	border-width: 0 2px 2px 0;
	display: inline-block;
	padding: 3px;
	font-size: 14px;
	color: inherit;
	margin-left: 5px;
	position: relative;
	top: -1px;
}
.mega-menu .arrow {
	border: solid #eaa4a4;
    border-width: 0 2px 2px 0;
}
.right {
	transform: rotate(-45deg);
	-webkit-transform: rotate(-45deg);
}
@media (max-width: 991.98px) {
	.active .right {
		transform: rotate(45deg);
		-webkit-transform: rotate(45deg);
		border-color: red;
	}
}
.down {
	transform: rotate(45deg);
	-webkit-transform: rotate(45deg);
}
@media (max-width: 991.98px) {
	.down {
		transform: rotate(-45deg);
		-webkit-transform: rotate(-45deg);
	}
	.active .down {
		transform: rotate(45deg);
		-webkit-transform: rotate(45deg);
		border-color: red;
	}
}
.nav-link.has-dropdown.active {
	color: red !important;
}
.navbar {
	padding: 0!important;
}
.nav-link {
	padding-top: 0.8rem;
	padding-bottom: 0.8rem;
}
.mm-nav-link {
	padding-top: 0.3rem;
	padding-bottom: 0.3rem;
	padding-right: 0.8rem;
	padding-left: 0.8rem;
	display: block;
	color: #6c757d;
}
.mm-nav-link:hover {
	color: #00664d;
}
#main-menu > .nav-item:after {
	background: none repeat scroll 0 0 transparent;
	bottom: 0;
	content: "";
	display: block;
	height: 2px;
	left: 50%;
	position: relative;
	background: #eaa4a4;
	transition: width 0.3s ease 0s, left 0.3s ease 0s;
	width: 0;
}
#main-menu > .nav-item:hover:after {
	width: 100%; 
  	left: 0; 
}
.mega-menu {
	columns: 4;
    float: left;
    max-width: 100%;
    width: 100%;
    column-fill: balance;
	column-gap: 40px;
}
.mega-col {
    display: grid;
    width: 100%;
    break-inside: avoid;
}
.mega-col .nav {
	display: inline-grid;
	width: 100%;
	page-break-inside: avoid;
}
.mega-col > .nav > li > a {
	border-bottom: 1px solid;
	width: 100%;
	font-size: 16px;
	display: inline-block;	
	padding: 5px;
}
/* ======= Main Menu =======  */

/* ===== Forms ===== */
.login-form,
.forgot-password-form,
.contact-form {
	width: 100%;
	max-width: 300px;
	margin: 0 auto;
}
.forgot-password-form {
	height: 0px;
	transition: all 0.3s ease-in-out;
	opacity: 0;
}
.not-visible {	
	opacity: 0;
	visibility: hidden;
}
.is-visible {	
	opacity: 1;
	visibility: visible;
}

/* ===== Forms ===== */

/* ===== Translate Icon ===== */
.locale-items {
	position: absolute;
	z-index: 9999;
	background-color: #cae6da;
}
.locale-items a:hover {
	cursor: pointer;
}
/* ===== Translate Icon ===== */

/* ===== Responsive tables in the account pages ===== */
@media (max-width: 767.98px) {
	thead th:not(:first-child) {
		display: none;
	}

	td,
	th {
		display: block;
		clear: both;
	}

	td[data-th]:before {
		content: attr(data-th);
		float: right;
	}
}
