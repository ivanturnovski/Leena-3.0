{%- assign products = section.settings.products -%}
{%- paginate collection.products by products -%}
<div class="container">
    <div class="row">
        <h1 class="text-center my-3">
            {% if collection.handle == 'all' %}All{% endif %}
            {{ collection.title }}
        </h1>
    </div>
    <div class="row justify-content-between">
        {% for block in section.blocks %}
        {% case block.type %}
        {% when 'sort_order' %}
        {%- render 'collection-filter' -%}
        {% when 'products_number' %}
        <div class="col col-sm-3 col-md-2 col-lg-1">{{ collection.products_count }}
            Products</div>
        {% else %}
        {% endcase %}
        {% endfor %}
    </div>
    <div class="row my-4">
        <div class="col-md-3">
            <div class="h4">Filters</div>
            {% render 'collection-product-filter' %}
        </div>
        <div class="col-md-9">
            <div class="row row-cols-sm-2 row-cols-md-3">
                {%- for product in collection.products -%}
                {%- assign image = product.featured_media.preview_image -%}
                <div class="col mb-3">
                    {%- render 'product-card', product: product, image: image -%}
                </div>
                {%- else -%}
                <p>no matches</p>
                {%- endfor -%}
            </div>
        </div>

    </div>
    {%- render 'pagination' , paginate: paginate -%}
</div>

{%- endpaginate -%}


{% schema %}

{
    "name": "Collection Pages",
    "settings": [
        {
            "type": "range",
            "id": "products",
            "label": "Products Per Collection",
            "min": 6,
            "max": 24,
            "step": 1,
            "default": 6
        }
    ],
    "blocks": [
        {
            "type": "sort_order",
            "name": "Sort Order",
            "limit": 1
        }, {
            "type": "products_number",
            "name": "Products Number",
            "limit": 1
        }
    ]
}

{% endschema %}