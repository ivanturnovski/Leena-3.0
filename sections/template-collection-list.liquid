{% paginate collection.products by 6 %}
    <h1 class="text-center my-3">{{ collection.title }}</h1>
    <div class="container">
        <div class="row justify-content-center">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'sort_order' %}
                        {%- render 'collection-filter' -%}
                    {% when 'products_number' %}
                        <div class="col col-12 text-center my-2">{{ collection.products_count }}
                            Products</div>
                    {% else %}
                {% endcase %}
            {% endfor %}
        </div>
        <div class="row">
            {%- for product in collection.products -%}
                {%- assign image = product.featured_media.preview_image -%}
                <div class="col-12 g-4">
                    <div class="card shadow">
                        <div class="thumbnails m-3">
                            {%- if image != blank -%}
                                <a href="{{ product.url | within: collection }}"><img width="150" height="100" class="card-img-top lazyload" src="{{ 'spinner.gif' | asset_img_url: '150x' }}" data-src="{{ image | img_url: '150x' }}" alt="{{ product.title }}"></a>
                            {%- else -%}
                                <a href="{{ product.url }}">{{ 'image' | placeholder_svg_tag: 'card-img-top' }}</a>
                            {%- endif -%}
                        </div>
                        <div class="card-body">
                            {% for block in section.blocks %}
                                {% case block.type %}
                                    {% when 'product_price' %}
                                        <h5>
                                            <a href="{{ product.url }}">{{ product.title }}</a>
                                        </h5>
                                        <p class="price">{{ product.price | money }}</p>
                                    {% when 'stock_status' %}
                                        {%- if product.available -%}
                                            <p>
                                                <span class="badge bg-success">In Stock</span>
                                            </p>
                                        {%- else -%}
                                            <p>
                                                <span class="badge bg-danger">Sold Out</span>
                                            </p>
                                        {%- endif -%}
                                    {% else %}
                                {% endcase %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {%- else -%}
                <p>no matches</p>
            {%- endfor -%}
        </div>
    </div>
    {%- render 'pagination' , paginate: paginate -%}
{%- endpaginate -%}


